<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:CommitLogViewer.UI.Units">

    <Style TargetType="{x:Type units:KeywordItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:KeywordItem}">
                    <Border BorderBrush="#cccccc" Padding="8 4 8 4" BorderThickness="1" Margin="0 0 6 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding KeyWord}" VerticalAlignment="Center"/>
                            <Button Margin="4 0 0 0" Content="x" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
