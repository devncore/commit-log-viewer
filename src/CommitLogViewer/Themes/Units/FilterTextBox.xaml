<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:CommitLogViewer.UI.Units">

    <Style TargetType="{x:Type units:FilterTextBox}">
        <Setter Property="KeyDownCommand" Value="{Binding KeyDownCommand}"/>
        <Setter Property="Text" Value="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:FilterTextBox}">
                    <Border BorderBrush="#DDDDDD" BorderThickness="1">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
