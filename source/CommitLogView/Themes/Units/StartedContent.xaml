<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:icons="clr-namespace:DevNcore.UI.Design.Controls;assembly=DevNcore.UI.Design"
    xmlns:units="clr-namespace:CommitLogView.UI.Units">

    <Style TargetType="{x:Type units:StartedContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:StartedContent}">
                    <StackPanel Margin="20">
                        <TextBlock Text="Getting Started." 
                                       FontSize="50" 
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"/>
                        <StackPanel Orientation="Horizontal">
                            <icons:GitHubIcon Width="24" Height="24"/>
                            <TextBlock Foreground="#FFFFFF"
                           FontSize="15"
                           Margin="10"
                           VerticalAlignment="Center"
                           Text="https://github.com/devncore/commit-log-viewer"/>
                        </StackPanel>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
